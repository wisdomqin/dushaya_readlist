<view class="rating-modal" wx:if="{{isVisible}}">
  <view class="modal-content">
    <view class="modal-header">
      <text class="modal-title">评分</text>
    </view>
    <view class="rating-section">
      <text>评分：</text>
      <slider min="1" max="10" step="1" value="{{rating}}" show-value bindchange="onRatingChange"/>
    </view>
    <view class="comment-section">
      <text>评价：</text>
      <textarea placeholder="请输入您的评价" value="{{comment}}" bindinput="onCommentInput"/>
    </view>
    <view class="modal-footer">
      <button class="cancel-btn" bindtap="onCancel">取消</button>
      <button class="confirm-btn" bindtap="onConfirm">确认</button>
    </view>
  </view>
</view>