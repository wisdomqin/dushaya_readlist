page {
  background-color: rgb(250, 249, 241);
  color: #333;
}

.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 0;
}


.book-list-scroll {
  flex: 1;
  overflow: hidden;
}

.book-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 40rpx 50rpx;
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.duck-review {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}


.review-content {
  font-size: 36rpx;
  color: #333;
  line-height: 1.6;
  font-style: italic;
  display: block;
  margin-bottom: 10rpx;
}

.review-title {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  display: block;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title-grade {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.book-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  flex: 1;
}

.book-author, .book-tags {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.book-description {
  font-size: 24rpx;
  color: #888;
  line-height: 1.6;
  margin-top: 10rpx;
}

.duck-review {
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.review-title {
  font-size: 24rpx;
  color: #666;
  text-align: right;
  display: block;
}

.book-rating {
  margin-top: 20rpx;
  text-align: right;
}

.rating-score {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffc107;
}

.rating-count {
  font-size: 22rpx;
  color: #999;
  margin-left: 10rpx;
}

.submit-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #333;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  z-index: 1000; /* 确保按钮在最上层 */
}

.book-list-container {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 120rpx; /* 为悬浮按钮留出空间 */
}

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 40rpx;
}

.book-list {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.book-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.book-author, .book-description, .book-tags, .book-review {
  font-size: 14px;
  margin-bottom: 3px;
}

/* 移除之前的 .book-card::before 相关样式 */

.book-grade-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.grade-image-container {
  width: 70rpx;  /* 减小容器大小 */
  height: 70rpx; /* 减小容器大小 */
  border-radius: 50%;
  overflow: hidden;
  background-color: #fff;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.1);
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2rpx solid #e0e0e0; /* 添加圆形边框 */
}

.grade-image {
  width: 80rpx;  /* 减小图片大小 */
  height: 80rpx; /* 减小图片大小 */
  object-fit: contain;
}

.book-grade {
  font-size: 18rpx; /* 稍微减小字体大小 */
  color: #999;
  margin-top: 4rpx;
}

/* 在文件末尾添加以下样式 */

.refresher-container {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: rgb(250, 249, 241);
}

.refresher-content {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.refresher-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
  line-height: 1.4;
  padding: 0 40rpx;
}
