<view class="safe-area-inset-top">
  <view class="page-container">
    <text class="book-title">{{bookDetail.title}}</text>
    <view class="book-tags">
      <text wx:for="{{bookDetail.tags}}" wx:key="*this" class="tag" bindtap="goToTag" data-tag="{{item}}">{{item}}</text>
    </view>
    <view class="book-author" bindtap="goToAuthor">
      <image src="{{bookDetail.authorAvatar || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <text>{{bookDetail.author}}</text>
    </view>
    <text class="book-description">{{bookDetail.description}}</text>
    <text class="book-review">读啥鸭评价：{{bookDetail.review}}</text>
    <view class="book-rating">
      <text class="rating-score">{{bookDetail.rating}}</text>
      <text class="rating-count">{{bookDetail.ratingCount}}人评分</text>
    </view>
    <button bindtap="goToSource">源地址</button>
    <button bindtap="showRatingModal">评分</button>
  </view>
</view>