.safe-area-inset-top {
  padding-top: constant(safe-area-inset-top); /* iOS 11.2 之前 */
  padding-top: env(safe-area-inset-top); /* iOS 11.2 及以后 */
}

.page-container {
  height: 100vh;
  background-color: #f8f9fa;
}

.scroll-view {
  height: 100%;
}

.content {
  padding: 0 40rpx 40rpx;
  box-sizing: border-box;
}

.logo-area {
  padding: calc({{safeAreaTopHeight}}px + 40rpx) 0 20rpx; /* 增加顶部 padding */
  background-color: #f8f9fa;
  position: sticky;
  top: 0;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.logo-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  padding-left: 20rpx; /* 添加左侧 padding */
}

/* 添加一个新的样式用于占位 */
.logo-placeholder {
  width: 36rpx; /* 与 logo-text 的字体大小相同 */
  height: 36rpx;
}

.header {
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  padding-top: 40rpx; /* 增加标题的顶部间距 */
}

.book-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #343a40;
  margin-bottom: 24rpx;
  line-height: 1.2;
}

.book-author {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 10rpx 0;
  border-top: 1px solid #e9ecef;
  border-bottom: 1px solid #e9ecef;
}

.author-avatar {
  width: 28rpx;  /* 调整为与文字高度一致 */
  height: 28rpx; /* 调整为与文字高度一致 */
  border-radius: 50%;
  margin-right: 10rpx;
}

.book-author > text {
  font-size: 28rpx;
  color: #495057;
  font-weight: 500;
}

.book-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background-color: #e9ecef;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #343a40;
  margin-bottom: 16rpx;
  display: block;
}

.book-description, .book-review, .book-list {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.book-rating {
  text-align: center;
  margin: 40rpx 0; /* 调整上下边距 */
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.rating-score {
  font-size: 72rpx;
  font-weight: 700;
  color: #ffc107;
}

.rating-count {
  font-size: 24rpx;
  color: #adb5bd;
  margin-left: 10rpx;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx; /* 增加顶部边距 */
  padding-bottom: calc(env(safe-area-inset-bottom) + 40rpx); /* 增加底部安全区域的内边距 */
}

.primary-btn, .secondary-btn {
  flex: 0.48; /* 调整按钮宽度，留出间距 */
  margin: 0;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
}

.primary-btn {
  background-color: #007bff;
  color: #ffffff;
}

.secondary-btn {
  background-color: #6c757d;
  color: #ffffff;
}