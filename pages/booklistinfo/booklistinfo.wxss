.page-container {
  padding: calc({{safeAreaTopHeight}}px + 40rpx) 40rpx 40rpx;
}

.book-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 24rpx;
  color: #343a40;
}

.book-tags {
  margin-bottom: 32rpx;
  margin-left: 12rpx;
  margin-right: 12rpx;
}

.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background-color: #e9ecef;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
  transition: all 0.3s ease;
  margin-left: 8rpx;
}

.tag:active {
  background-color: #dee2e6;
}

.book-author {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  margin-left: 4rpx;
  margin-right: 4rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

.book-author image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.book-description, .book-review {
  font-size: 28rpx;
  color: #495057;
  margin-bottom: 32rpx;
  line-height: 1.6;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.book-rating {
  margin-bottom: 32rpx;
  text-align: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.rating-score {
  font-size: 64rpx;
  font-weight: 700;
  color: #ffc107;
}

.rating-count {
  font-size: 24rpx;
  color: #adb5bd;
}

button {
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  width: 100%;
  margin-bottom: 20rpx;
}