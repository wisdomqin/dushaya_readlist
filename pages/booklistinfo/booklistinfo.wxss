.safe-area-inset-top {
  padding-top: constant(safe-area-inset-top); /* iOS 11.2 之前 */
  padding-top: env(safe-area-inset-top); /* iOS 11.2 及以后 */
}

.page-container {
  height: 100vh;
  background-color: #f8f9fa;
  display: flex;
  flex-direction: column;
}

.scroll-view {
  flex: 1;
  overflow-y: auto;
}

.content {
  padding: 0 40rpx 240rpx; /* 增加底部 padding，为按钮留出更多空间 */
  box-sizing: border-box;
}

.header {
  margin-top: 10rpx; /* 减少顶部边距 */
  margin-bottom: 40rpx;
  padding-top: 20rpx; /* 减少标题的顶部间距 */
}

.book-title {
  font-size: 48rpx;
  font-weight: 700;
  color: #343a40;
  margin-bottom: 24rpx;
  line-height: 1.2;
}

.book-author {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
  padding: 10rpx 0;
  border-top: 1px solid #e9ecef;
  border-bottom: 1px solid #e9ecef;
}

.author-avatar {
  width: 28rpx;  /* 调整为与文字高度一致 */
  height: 28rpx; /* 调整为与文字高度一致 */
  border-radius: 50%;
  margin-right: 10rpx;
}

.book-author > text {
  font-size: 28rpx;
  color: #495057;
  font-weight: 500;
}

.book-tags {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 40rpx;
}

.tag {
  padding: 8rpx 16rpx;
  background-color: #e9ecef;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #495057;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
}

.section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #343a40;
  margin-bottom: 16rpx;
  display: block;
}

.book-description, .book-review, .book-list {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.book-rating {
  text-align: center;
  margin: 30rpx 0;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.rating-score {
  font-size: 64rpx;
  font-weight: bold;
  color: #ffc107;
  display: block;
  margin-bottom: 10rpx;
}

.rating-count {
  font-size: 28rpx;
  color: #6c757d;
}

.button-group {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 40rpx;
  background-color: transparent; /* 将背景设置为透明 */
  z-index: 1000;
  height: 120rpx;
}

.primary-btn, .secondary-btn {
  flex: 0.48;
  margin: 0;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  text-align: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1); /* 添加阴影以增加可见度 */
}

.primary-btn {
  background-color: rgba(0, 123, 255, 0.9); /* 稍微透明的蓝色 */
  color: #ffffff;
}

.secondary-btn {
  background-color: rgba(108, 117, 125, 0.9); /* 稍微透明的灰色 */
  color: #ffffff;
}

/* 添加安全区域底部内边距 */
@supports (padding-bottom: constant(safe-area-inset-bottom)) or (padding-bottom: env(safe-area-inset-bottom)) {
  .button-group {
    padding-bottom: calc(20rpx + constant(safe-area-inset-bottom));
    padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
    height: calc(120rpx + constant(safe-area-inset-bottom));
    height: calc(120rpx + env(safe-area-inset-bottom));
  }
  
  .content {
    padding-bottom: calc(240rpx + constant(safe-area-inset-bottom));
    padding-bottom: calc(240rpx + env(safe-area-inset-bottom));
  }
}

/* 添加以下样式 */
.comments-section {
  margin-top: 40rpx;
}

.no-comments {
  color: #999;
  font-size: 28rpx;
  text-align: center;
  padding: 20rpx 0;
}

.comment-item {
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #e9ecef;
}

.comment-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.comment-author {
  font-weight: bold;
  color: #495057;
}

.comment-rating {
  color: #ffc107;
}

.comment-content {
  font-size: 28rpx;
  color: #495057;
  line-height: 1.6;
}

.loading {
  font-size: 28rpx;
  color: #6c757d;
}