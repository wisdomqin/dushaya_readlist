page {
  background-color: #f5f5f5;
  color: #333;
}

.page-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding-top: 0; /* 移除顶部内边距 */
}

.header {
  padding: 60rpx 40rpx 20rpx; /* 调整顶部内边距 */
  background-color: #f5f5f5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

.book-list-scroll {
  flex: 1;
  overflow: hidden;
}

.book-card {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 0 40rpx 50rpx;  /* 修改这里，添加左右边距 */
  box-shadow: 0 8rpx 20rpx rgba(0,0,0,0.1);
  display: flex;
  flex-direction: column;
}

.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.book-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.book-author {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.book-description {
  font-size: 26rpx;
  color: #888;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.duck-review {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.review-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.book-rating {
  margin-top: 30rpx;
  text-align: right;
}

.rating-score {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffc107;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.submit-btn {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #333;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.15);
  z-index: 1000; /* 确保按钮在最上层 */
}

.book-list-container {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
  padding-bottom: 120rpx; /* 为悬浮按钮留出空间 */
}

.no-data {
  text-align: center;
  font-size: 28rpx;
  color: #999;
  padding: 40rpx;
}

.book-list {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
}

.book-title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 5px;
}

.book-author, .book-description, .book-tags, .book-review {
  font-size: 14px;
  margin-bottom: 3px;
}