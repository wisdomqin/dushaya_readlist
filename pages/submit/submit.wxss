.container {
  padding: 40rpx 30rpx;
}


button {
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  width: 100%;
}

.safe-area-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  background-color: #e2ecf7;
  background-image: 
    linear-gradient(to right, rgba(100, 100, 100, 0.1) 1px, transparent 1px),
    linear-gradient(to bottom, rgba(100, 100, 100, 0.1) 1px, transparent 1px),
    radial-gradient(circle, #4a90e2 2px, transparent 2px),
    linear-gradient(135deg, #84d0ff 0%, #4a90e2 100%);
  background-size: 
    20px 20px,
    20px 20px,
    60px 60px,
    100% 100%;
  background-position: 
    0 0,
    0 0,
    30px 30px,
    0 0;
  z-index: 0;
}

.page-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
  padding: 20rpx 0;
  position: relative;
  z-index: 1;
  background-color: transparent;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.content {
  width: 85%;
  padding: 60rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.85);
  border-radius: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.15), 0 0 0 1px rgba(255, 255, 255, 0.2);
  margin: auto;
  position: relative;
  z-index: 2;
  backdrop-filter: blur(10px);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
}

.input-container {
  position: relative;
  margin-bottom: 50rpx;
  width: 100%;
  height: 180rpx;
}

.input-icon {
  position: absolute;
  left: 40rpx;
  top: 70rpx; /* 调整图标位置到输入框中间 */
  color: #999;
  font-size: 40rpx;
}

.url-input {
  width: 100%;
  height: 120rpx;
  padding: 30rpx 40rpx 30rpx 100rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 36rpx;
  line-height: 1.5;
  transition: all 0.3s ease;
  box-sizing: border-box;
  background-color: #fff; /* 确保背景色为白色 */
}

.url-input:focus {
  border-color: #4dabf7;
  box-shadow: 0 0 0 4rpx rgba(77, 171, 247, 0.2);
}

.textarea {
  height: 160rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #333333;  /* 改为深灰色 */
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 30rpx;  /* 调整按钮圆角以匹配输入框 */
  transition: all 0.3s ease;
  margin-top: 20rpx;  /* 增加与输入框的间距 */
}

.submit-btn:active {
  transform: translateY(2rpx);
  background-color: #1a1a1a;  /* 点击时稍微变暗 */
}

.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #e9ecef;
  border-radius: 8rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  display: block;
  margin-bottom: 10rpx;
}

.tip {
  font-size: 26rpx;
  color: #6c757d;
  display: block;
  margin-bottom: 6rpx;
}

/* 在现有样式的基础上添加以下内容 */

.confirmation-scroll {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.confirmation {
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.book-info {
  background-color: rgba(255, 255, 255, 0.85);
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  backdrop-filter: blur(10px);
}

.info-item {
  margin-bottom: 30rpx;
}

.info-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.book-info input,
.book-info textarea {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: rgba(249, 249, 249, 0.9);
  min-height: 80rpx;
  box-sizing: border-box;
}

.book-info textarea {
  min-height: 240rpx;
  line-height: 1.5;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding-bottom: 30rpx;
}

.cancel-btn, .confirm-btn {
  width: 45%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  border-radius: 45rpx;
}

.cancel-btn {
  background-color: rgba(240, 240, 240, 0.9);
  color: #333;
}

.confirm-btn {
  background-color: rgba(51, 51, 51, 0.9);
  color: #fff;
}

/* ... 保留原有的样式 ... */

.grade-item {
  position: relative;
  margin-bottom: 40rpx;
  padding: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 15rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.grade-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.book-grade {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  margin-bottom: 20rpx;
}

.grade-badge {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 200rpx;  /* 增加尺寸 */
  height: 200rpx; /* 增加尺寸 */
  margin: 0 auto;
  border-radius: 50%;
  background-color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  overflow: hidden;
}

.badge-image {
  width: 220rpx;  /* 增加尺寸 */
  height: 220rpx; /* 增加尺寸 */
  object-fit: contain;
}

/* 为评级输入框添加特殊样式 */
.grade-content .book-input {
  flex: 1;
  background-color: rgba(255, 255, 255, 0.9);
  border: 2px solid #4a90e2;
  border-radius: 10rpx;
  padding: 10rpx 20rpx;
  font-size: 30rpx;
  color: #333;
  transition: all 0.3s ease;
}

.grade-content .book-input:focus {
  box-shadow: 0 0 10rpx rgba(74, 144, 226, 0.5);
}
