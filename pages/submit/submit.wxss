.container {
  padding: 40rpx 30rpx;
}


button {
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  width: 100%;
}

.page-container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f4f8;
  background-image: 
    linear-gradient(0deg, transparent 24%, rgba(100, 100, 100, 0.15) 25%, rgba(100, 100, 100, 0.15) 26%, transparent 27%, transparent 74%, rgba(100, 100, 100, 0.15) 75%, rgba(100, 100, 100, 0.15) 76%, transparent 77%, transparent),
    linear-gradient(90deg, transparent 24%, rgba(100, 100, 100, 0.15) 25%, rgba(100, 100, 100, 0.15) 26%, transparent 27%, transparent 74%, rgba(100, 100, 100, 0.15) 75%, rgba(100, 100, 100, 0.15) 76%, transparent 77%, transparent);
  background-size: 60px 60px;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.content {
  width: 85%;
  padding: 60rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
}

.input-container {
  position: relative;
  margin-bottom: 50rpx;
  width: 100%;
  height: 180rpx;
}

.input-icon {
  position: absolute;
  left: 40rpx;
  top: 70rpx; /* 调整图标位置到输入框中间 */
  color: #999;
  font-size: 40rpx;
}

.url-input {
  width: 100%;
  height: 120rpx;
  padding: 30rpx 40rpx 30rpx 100rpx;
  border: 3rpx solid #e0e0e0;
  border-radius: 20rpx;
  font-size: 36rpx;
  line-height: 1.5;
  transition: all 0.3s ease;
  box-sizing: border-box;
  background-color: #fff; /* 确保背景色为白色 */
}

.url-input:focus {
  border-color: #4dabf7;
  box-shadow: 0 0 0 4rpx rgba(77, 171, 247, 0.2);
}

.textarea {
  height: 160rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #333333;  /* 改为深灰色 */
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 30rpx;  /* 调整按钮圆角以匹配输入框 */
  transition: all 0.3s ease;
  margin-top: 20rpx;  /* 增加与输入框的间距 */
}

.submit-btn:active {
  transform: translateY(2rpx);
  background-color: #1a1a1a;  /* 点击时稍微变暗 */
}

.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #e9ecef;
  border-radius: 8rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  display: block;
  margin-bottom: 10rpx;
}

.tip {
  font-size: 26rpx;
  color: #6c757d;
  display: block;
  margin-bottom: 6rpx;
}

/* 在现有样式的基础上添加以下内容 */

.confirmation {
  margin-top: 30rpx;
  max-height: 80vh; /* 设置最大高度 */
  overflow-y: auto; /* 允许内容滚动 */
  padding-right: 20rpx; /* 为滚动条留出空间 */
}

.book-info {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.info-item {
  margin-bottom: 30rpx; /* 增加项目之间的间距 */
}

.info-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.book-info input {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  min-height: 80rpx; /* 增加输入框的最小高度 */
  box-sizing: border-box;
}

.book-info textarea {
  width: 100%;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  background-color: #f9f9f9;
  min-height: 240rpx; /* 显著增加文本区域的最小高度 */
  line-height: 1.5;
  box-sizing: border-box;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
}

.button-group {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  padding-bottom: 30rpx; /* 添加底部内边距 */
}

.cancel-btn, .confirm-btn {
  width: 45%;
  height: 90rpx; /* 增加按钮高度 */
  line-height: 90rpx;
  font-size: 32rpx; /* 稍微增加字体大小 */
  border-radius: 45rpx; /* 调整圆角以匹配新的高度 */
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #333;
}

.confirm-btn {
  background-color: #333;
  color: #fff;
}