.container {
  padding: 40rpx 30rpx;
}

input {
  background-color: #fff;
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
}

button {
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 0;
  font-size: 28rpx;
  width: 100%;
}

.page-container {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f4f8;
  background-image: 
    linear-gradient(0deg, transparent 24%, rgba(100, 100, 100, 0.15) 25%, rgba(100, 100, 100, 0.15) 26%, transparent 27%, transparent 74%, rgba(100, 100, 100, 0.15) 75%, rgba(100, 100, 100, 0.15) 76%, transparent 77%, transparent),
    linear-gradient(90deg, transparent 24%, rgba(100, 100, 100, 0.15) 25%, rgba(100, 100, 100, 0.15) 26%, transparent 27%, transparent 74%, rgba(100, 100, 100, 0.15) 75%, rgba(100, 100, 100, 0.15) 76%, transparent 77%, transparent);
  background-size: 60px 60px;
}

.bg-image {
  position: absolute;
  width: 100%;
  height: 100%;
  object-fit: cover;
  z-index: -1;
}

.content {
  width: 85%;
  padding: 60rpx 40rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.1);
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 44rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 30rpx;
  color: #666;
}

.input-container {
  position: relative;
  margin-bottom: 50rpx;
}

.input-icon {
  position: absolute;
  left: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

.input {
  width: 100%;
  height: 120rpx;  /* 进一步增加高度 */
  padding: 0 40rpx 0 90rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 60rpx;
  font-size: 32rpx;
  transition: all 0.3s ease;
}

.input:focus {
  border-color: #4dabf7;
  box-shadow: 0 0 0 4rpx rgba(77, 171, 247, 0.2);
}

.textarea {
  height: 160rpx;
}

.submit-btn {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  background-color: #333333;  /* 改为深灰色 */
  color: #ffffff;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 50rpx;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: translateY(2rpx);
  background-color: #1a1a1a;  /* 点击时稍微变暗 */
}

.tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #e9ecef;
  border-radius: 8rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #495057;
  display: block;
  margin-bottom: 10rpx;
}

.tip {
  font-size: 26rpx;
  color: #6c757d;
  display: block;
  margin-bottom: 6rpx;
}