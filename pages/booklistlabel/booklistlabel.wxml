<!--pages/booklistlabel/booklistlabel.wxml-->
<text>pages/booklistlabel/booklistlabel.wxml</text>

<view class="safe-area-inset-top">
  <view class="page-container">
    <text class="tag-name">{{tag.name}}</text>
    <text class="tag-description">{{tag.description}}</text>
    <view class="book-list">
      <view wx:for="{{bookLists}}" wx:key="id" class="book-card" bindtap="goToBookList" data-id="{{item.id}}">
        <view class="book-info">
          <text class="book-title">{{item.title}}</text>
          <text class="book-author">{{item.author}}</text>
        </view>
        <view class="book-rating">
          <text class="rating-score">{{item.rating}}</text>
          <text class="rating-count">{{item.ratingCount}}人评分</text>
        </view>
      </view>
    </view>
  </view>
</view>