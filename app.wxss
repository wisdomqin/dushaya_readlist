/**app.wxss**/
page {
  background-color: #f8f9fa;
  color: #343a40;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 40rpx;
}

.book-card {
  margin-bottom: 30rpx;
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.book-author, .book-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

button {
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
}

.safe-area-inset-top {
  padding-top: constant(safe-area-inset-top); /* iOS 11.0 */
  padding-top: env(safe-area-inset-top); /* iOS 11.2+ */
}

.page-container {
  padding-top: calc({{safeAreaTopHeight}}px + 40rpx);
  padding-left: 40rpx;
  padding-right: 40rpx;
  padding-bottom: 40rpx;
}
